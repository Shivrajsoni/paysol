generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Contacts {
  id String @id @default(uuid())
  username String 
  PublicKey String
  addedBy User @relation("UserToContacts", fields: [addedById], references: [id])
  addedById String
  createdAt DateTime @default(now())
}

model User {
  id        String      @id @default(uuid())
  username  String?     
  PublicKey String?
  clerkId   String?     @unique
  transactions Transaction[]  @relation("UserToTransactions")
  contacts Contacts[]  @relation("UserToContacts")
}

model Transaction {
  id String @id @default(uuid())
  signature String
  from String
  to String
  amount String
  user User @relation("UserToTransactions", fields: [userId], references: [id])
  userId String
}

