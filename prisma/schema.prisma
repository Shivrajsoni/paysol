generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Contacts {
  id String @id @default(uuid())
  username String 
  PublicKey String
  users User[] @relation("UserToContacts")
}

model User {
  id        String      @id @default(uuid())
  username  String  
  PublicKey String
  transactions Transaction[]  @relation("UserToTransactions")
  contacts Contacts[]  @relation("UserToContacts")
  contactId  String 
}

model Transaction {
  id String @id @default(uuid())
  signature String
  from String
  to String
  amount String
  user User @relation("UserToTransactions", fields: [userId], references: [id])
  userId String
}

